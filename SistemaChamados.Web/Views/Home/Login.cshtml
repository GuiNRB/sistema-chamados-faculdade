@{
    ViewData["Title"] = "Login - NeuroHelp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="centered">
    <div class="auth-box">
        <div style="text-align: center; margin-bottom: 24px;">
            <img src="~/img/neurohelp-logo.png" alt="NeuroHelp Logo" style="width: 120px; height: auto; margin-bottom: 16px;">
            <h1 class="auth-title">NeuroHelp</h1>
            <p style="color: var(--muted); margin-bottom: 0;">Sistema de Gestão de Chamados</p>
        </div>
        
        <form id="login-form">
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
                <label for="password">Senha:</label>
                <input type="password" id="password" name="password" required>
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 16px;">Entrar</button>
        </form>
        
        <div style="text-align: center;">
            <a href="#" onclick="go('esqueci-senha-desktop.html')" style="color: var(--primary); text-decoration: none; margin-right: 16px;">Esqueci minha senha</a>
            <a href="#" onclick="go('cadastro-desktop.html')" style="color: var(--primary); text-decoration: none;">Criar conta</a>
        </div>
    </div>
</div>

<script>
    // Inicializar o formulário de login quando a página carregar
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof initLogin === 'function') {
            initLogin();
        }
    });
</script>