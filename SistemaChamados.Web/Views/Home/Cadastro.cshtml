@{
    ViewData["Title"] = "Criar Conta";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usa o nosso "molde" limpo
}

<main class="centered">
  <div class="auth-box">
    <div style="text-align: center; margin-bottom: 24px">
      <img
        src="~/img/neurohelp-logo.png" alt="Logo Neuro Help"
        style="width: 180px; height: auto"
      />
    </div>

    <h1 class="auth-title">Criar nova conta</h1>
    <p style="color: #64748b; margin-bottom: 20px">
      Preencha os campos abaixo para se registrar
    </p>

    <form id="register-form">
      <div class="form-group">
        <label for="r-name">Nome completo</label>
        <input
          type="text"
          id="r-name"
          name="r-name"
          placeholder="Seu nome completo"
          required
          autocomplete="name"
        />
      </div>
      <div class="form-group">
        <label for="r-email">E-mail</label>
        <input
          type="email"
          id="r-email"
          name="r-email"
          placeholder="exemplo@empresa.com"
          required
          autocomplete="email"
        />
      </div>
      <div class="form-group password-wrapper">
        <label for="r-pass">Senha</label>
        <input
          type="password"
          id="r-pass"
          name="r-pass"
          placeholder="Digite sua senha"
          required
          autocomplete="new-password"
        />
        <button
          type="button"
          class="toggle-btn"
          data-target="r-pass"
          title="Mostrar/ocultar senha"
        >
          ğŸ‘ï¸
        </button>
      </div>
      <div class="form-group password-wrapper">
        <label for="r-confirm">Confirmar senha</label>
        <input
          type="password"
          id="r-confirm"
          name="r-confirm"
          placeholder="Repita sua senha"
          required
          autocomplete="new-password"
        />
        <button
          type="button"
          class="toggle-btn"
          data-target="r-confirm"
          title="Mostrar/ocultar senha"
        >
          ğŸ‘ï¸
        </button>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%">
        Criar conta
      </button>
    </form>

    <p style="text-align: center; margin-top: 16px">
      JÃ¡ possui conta?
      <a
        href="/Home/Index" style="color: var(--primary); font-weight: 600"
        >Fazer login</a
      >
    </p>
  </div>
</main>