@{
    ViewData["Title"] = "Login";
    // Dizemos ao ASP.NET para usar o nosso layout limpo que criámos no passo 2
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="centered">
  <div class="auth-box">
    <div style="text-align: center; margin-bottom: 24px">
      <img
        src="~/img/neurohelp-logo.png" alt="Logo Neuro Help"
        style="width: 180px; height: auto"
      />
    </div>

    <h1 class="auth-title">Acesso ao Sistema</h1>
    <p style="color: #64748b; margin-bottom: 20px">
      Faça login para acessar seus chamados
    </p>

    <form id="login-form">
      <div class="form-group">
        <label for="email">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="exemplo@empresa.com"
          required
          autocomplete="email"
        />
      </div>

      <div class="form-group password-wrapper">
        <label for="password">Senha</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Digite sua senha"
          required
          autocomplete="current-password"
        />
        <button
          type="button"
          class="toggle-btn"
          data-target="password"
          title="Mostrar/ocultar senha"
        >
          👁️
        </button>
      </div>

      <button type="submit" class="btn btn-primary" style="width: 100%">
        Entrar
      </button>
    </form>

    <p style="text-align: center; margin-top: 16px">
      Não possui conta?
      <a
        href="/Home/Cadastro" style="color: var(--primary); font-weight: 600"
        >Criar conta</a
      >
    </p>

    <p style="text-align: center; margin-top: 8px">
      <a href="/Home/EsqueciSenha">Esqueceu a senha?</a> </p>
  </div>
</main>
